---
import '../styles/global.css';
import Navbar from '../components/Navbar.jsx';
import Footer from '../components/Footer.jsx';
import 'aos/dist/aos.css';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Arkeon Studio</title>
  </head>
  <body class="bg-arkeon-charcoal text-white overflow-x-hidden selection:bg-arkeon-gold selection:text-arkeon-charcoal flex flex-col min-h-screen">
    
    {/* Navbar needs React to handle the mobile menu and scroll effects */}
    <Navbar client:only="react" />

    <main class="flex-grow pt-20">
      <slot />
    </main>

    {/* 
       FIX IS HERE: 
       Added 'client:visible'. This tells Astro to load the React JavaScript 
       as soon as the user scrolls down to the footer. 
       Without this, the Subscribe button will just reload the page.
    */}
    <Footer client:visible />

    <script>
      import AOS from 'aos';
      setTimeout(() => {
        AOS.init({
          duration: 800,
          once: true,
          easing: 'ease-out-cubic',
          offset: 50,
        });
      }, 100);
    </script>
  </body>
</html>
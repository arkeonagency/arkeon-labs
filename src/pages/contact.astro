---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
import ContactForm from '../components/ContactForm.jsx';
import { Mail, Calendar, MessageCircle } from 'lucide-react';

const telegramHandle = "@bereket"; 
const contactEmail = "bereketdesigns@gmail.com";
const calendlyUrl = "https://calendly.com/";
---

<BaseLayout>
  <Seo 
    title="Contact" 
    description="Start your project with Arkeon â€” book a strategy call or send a message." 
  />

  <section class="pt-32 pb-20 relative overflow-hidden">
    {/* Background Splashes */}
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-arkeon-gold/10 blur-[150px] rounded-full pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-arkeon-blue/10 blur-[150px] rounded-full pointer-events-none"></div>

    <div class="container mx-auto px-6 grid lg:grid-cols-2 gap-20 relative z-10">
      
      {/* Left Column: Info */}
      <div data-aos="fade-right">
        <h1 class="text-5xl md:text-7xl font-serif font-bold mb-8 text-white">
          Start Your <span class="text-gradient-gold">Project</span>
        </h1>
        <p class="text-xl text-gray-300 mb-12 leading-relaxed">
          Ready to elevate your brand? We are currently accepting new projects for the upcoming quarter.
        </p>

        <div class="space-y-6">
          <a href={calendlyUrl} target="_blank" class="flex items-center gap-6 group p-6 border border-white/5 bg-white/[0.02] rounded-2xl hover:bg-white/[0.05] hover:border-arkeon-gold/30 transition-all">
            <div class="w-14 h-14 bg-white/5 rounded-full flex items-center justify-center group-hover:bg-arkeon-gold group-hover:text-arkeon-charcoal transition-colors border border-white/10">
              <Calendar size={24} />
            </div>
            <div>
              <h3 class="font-bold text-white text-lg">Book a Strategy Call</h3>
              <p class="text-sm text-gray-400 group-hover:text-gray-300">20-minute intro call via Calendly</p>
            </div>
          </a>

          <a href={`https://t.me/${telegramHandle.replace('@','')}`} target="_blank" class="flex items-center gap-6 group p-6 border border-white/5 bg-white/[0.02] rounded-2xl hover:bg-white/[0.05] hover:border-arkeon-gold/30 transition-all">
            <div class="w-14 h-14 bg-white/5 rounded-full flex items-center justify-center group-hover:bg-arkeon-gold group-hover:text-arkeon-charcoal transition-colors border border-white/10">
              <MessageCircle size={24} />
            </div>
            <div>
              <h3 class="font-bold text-white text-lg">Chat on Telegram</h3>
              <p class="text-sm text-gray-400 group-hover:text-gray-300">Direct message {telegramHandle}</p>
            </div>
          </a>

          <a href={`mailto:${contactEmail}`} class="flex items-center gap-6 group p-6 border border-white/5 bg-white/[0.02] rounded-2xl hover:bg-white/[0.05] hover:border-arkeon-gold/30 transition-all">
            <div class="w-14 h-14 bg-white/5 rounded-full flex items-center justify-center group-hover:bg-arkeon-gold group-hover:text-arkeon-charcoal transition-colors border border-white/10">
              <Mail size={24} />
            </div>
            <div>
              <h3 class="font-bold text-white text-lg">Email Us</h3>
              <p class="text-sm text-gray-400 group-hover:text-gray-300">{contactEmail}</p>
            </div>
          </a>
        </div>
      </div>

      {/* Right Column: Form with Glassmorphism */}
      <div class="bg-white/[0.03] backdrop-blur-md border border-white/10 p-8 md:p-10 rounded-3xl shadow-2xl relative" data-aos="fade-left">
        <div class="absolute inset-0 bg-gradient-to-b from-white/5 to-transparent rounded-3xl pointer-events-none"></div>
        <h2 class="text-2xl font-serif mb-8 text-white relative z-10">Send a message</h2>
        <div class="relative z-10">
          <ContactForm client:load />
        </div>
      </div>

    </div>
  </section>
</BaseLayout>
---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
import { Image } from 'astro:assets';
import { ArrowUpRight } from 'lucide-react';

// 1. Import Images from src/assets for optimization
import amanImg from '../assets/images/aman.jpg';
import nouraImg from '../assets/images/noura.jpg';
import divinexImg from '../assets/images/divinex.jpg';

const projects = [
  {
    title: "Aman Dental",
    category: "Healthcare",
    image: amanImg,
    href: "/work/aman-dental",
    desc: "Redefining the patient experience through digital calm."
  },
  {
    title: "NOURA Skincare",
    category: "E-Commerce",
    image: nouraImg,
    href: "/work/noura-skincare",
    desc: "Premium minimalism for a luxury skincare line."
  },
  {
    title: "DivineX Agency",
    category: "Creative",
    image: divinexImg,
    href: "/work/divinex-agency",
    desc: "High-performance immersive digital experience."
  }
];
---

<BaseLayout>
  <Seo 
    title="Work" 
    description="Selected case studies: Aman Dental, NOURA Skincare, DivineX. Narrative-driven websites by Arkeon." 
  />

  <section class="pt-32 pb-20 relative overflow-hidden">
    {/* Ambient Glow */}
    <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-arkeon-blue/10 blur-[150px] rounded-full pointer-events-none"></div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <h1 class="text-5xl md:text-7xl font-serif mb-6" data-aos="fade-up">
        Selected <span class="text-gradient-gold">Work</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
        Our work combines strategy, craft, and technical delivery. Each project is presented as a story.
      </p>
    </div>
  </section>

  <section class="pb-32 relative z-10">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-10">
        {projects.map((project, index) => (
          <a 
            href={project.href}
            data-aos="fade-up" 
            data-aos-delay={index * 100} 
            class={`group relative block rounded-2xl overflow-hidden border border-white/10 bg-white/[0.02] backdrop-blur-md hover:border-arkeon-gold/50 transition-all duration-500 ${index === 2 ? "md:col-span-2 md:w-2/3 md:mx-auto" : ""}`}
          >
            {/* Image Container */}
            <div class="aspect-video overflow-hidden relative">
                <div class="absolute inset-0 bg-arkeon-charcoal/10 group-hover:bg-transparent transition-colors duration-500 z-10"></div>
                <Image 
                  src={project.image} 
                  alt={project.title} 
                  width={1200}
                  quality="85"
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                />
            </div>

            {/* Content Overlay */}
            <div class="absolute bottom-0 left-0 right-0 p-8 bg-gradient-to-t from-black/90 via-black/50 to-transparent z-20 translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
                <div class="flex justify-between items-end">
                    <div>
                        <span class="text-arkeon-gold text-xs font-bold uppercase tracking-widest mb-2 block">
                            {project.category}
                        </span>
                        <h3 class="text-3xl font-serif text-white mb-2">{project.title}</h3>
                        <p class="text-gray-300 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-500 transform translate-y-4 group-hover:translate-y-0">
                            {project.desc}
                        </p>
                    </div>
                    <div class="w-12 h-12 rounded-full bg-white/10 backdrop-blur-md border border-white/20 flex items-center justify-center text-white group-hover:bg-arkeon-gold group-hover:text-arkeon-charcoal transition-colors">
                        <ArrowUpRight size={24} />
                    </div>
                </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <section class="py-20 border-t border-white/5 text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-arkeon-gold/5 blur-3xl pointer-events-none"></div>
    <div class="relative z-10">
      <h3 class="text-3xl font-serif mb-8 text-white">Have a project in mind?</h3>
      <a href="/contact" class="inline-block px-12 py-5 bg-white text-arkeon-charcoal font-bold rounded-full hover:bg-arkeon-gold hover:scale-105 transition-all shadow-[0_0_30px_rgba(255,255,255,0.1)]">
        Let's Discuss
      </a>
    </div>
  </section>
</BaseLayout>
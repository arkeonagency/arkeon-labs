---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
import { Search, Map, Palette, Code, CheckCircle2, Rocket, Hand } from 'lucide-react';

const steps = [
  {
    number: "01",
    title: "Discovery",
    icon: Search,
    desc: "We start with a deep dive questionnaire and strategy call to understand your brand's core truth, audience, and goals."
  },
  {
    number: "02",
    title: "Strategy",
    icon: Map,
    desc: "We define the site architecture (sitemap), user journeys, and content strategy to ensure every page has a purpose."
  },
  {
    number: "03",
    title: "Design",
    icon: Palette,
    desc: "We create high-fidelity moodboards and UI designs. This is where the visual story comes to life before we write a single line of code."
  },
  {
    number: "04",
    title: "Build",
    icon: Code,
    desc: "Using Astro and Tailwind CSS, we develop a pixel-perfect, responsive website. We focus on clean code and performance."
  },
  {
    number: "05",
    title: "Test",
    icon: CheckCircle2,
    desc: "Rigorous QA testing across devices. We check for accessibility, load speeds, and browser compatibility."
  },
  {
    number: "06",
    title: "Launch",
    icon: Rocket,
    desc: "We handle the deployment, analytics setup, and provide training. We stay onboard to ensure everything runs smoothly."
  },
  {
    number: "07",
    title: "Training & Handover",
    icon: Hand,
    desc: "We don't just hand you the keys; we teach you how to drive. You receive a recorded video workshop teaching you how to use your CMS to update text, images, and blogs independently."
  }

];
---

<BaseLayout>
  <Seo 
    title="Our Process" 
    description="Arkeonâ€™s 6-step process: Discovery, Strategy, Design, Build, Test, Launch & Support." 
  />

  <section class="pt-32 pb-20 text-center relative overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-arkeon-gold/5 blur-[120px] rounded-full pointer-events-none"></div>
    <div class="container mx-auto px-6 relative z-10">
      <h1 class="text-5xl md:text-7xl font-serif mb-6 text-white">The <span class="text-gradient-gold">Process</span></h1>
      <p class="text-gray-400 max-w-2xl mx-auto text-lg leading-relaxed">
        Great results aren't accidental. We follow a structured path to ensure clarity, creativity, and quality at every stage.
      </p>
    </div>
  </section>

  <section class="pb-32 relative">
    <div class="container mx-auto px-6 relative">
      
      {/* Central Line (Desktop) / Left Line (Mobile) */}
      <div class="absolute left-6 md:left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-transparent via-arkeon-gold/50 to-transparent md:-translate-x-1/2"></div>

      <div class="space-y-12 md:space-y-24">
        {steps.map((step, index) => (
          <div class={`relative flex flex-col md:flex-row items-start md:items-center gap-8 ${index % 2 !== 0 ? 'md:flex-row-reverse' : ''}`}>
            
            {/* Center Node (The Dot) */}
            <div class="absolute left-6 md:left-1/2 -translate-x-1/2 w-3 h-3 md:w-4 md:h-4 bg-arkeon-charcoal border-2 border-arkeon-gold rounded-full z-20 shadow-[0_0_15px_rgba(230,197,91,0.8)] mt-1.5 md:mt-0"></div>

            {/* Content Card */}
            <div class="flex-1 pl-12 md:pl-0">
               <div 
                 class={`relative p-8 border border-white/5 bg-white/[0.02] backdrop-blur-md rounded-2xl hover:bg-white/[0.05] hover:border-arkeon-gold/30 transition-all duration-500 group overflow-hidden ${index % 2 !== 0 ? 'md:text-left' : 'md:text-right md:ml-auto md:mr-0'}`}
                 data-aos={index % 2 !== 0 ? "fade-left" : "fade-right"}
                 style={`max-width: 500px; ${index % 2 === 0 ? 'margin-left: auto;' : 'margin-right: auto;'}`}
               >
                  {/* Decorative Background Number */}
                  <span class={`absolute -bottom-10 text-[10rem] font-serif font-bold text-white/[0.02] select-none pointer-events-none transition-transform duration-700 group-hover:scale-110 ${index % 2 !== 0 ? 'right-0' : 'left-0'}`}>
                    {step.number}
                  </span>

                  {/* Icon & Title Header */}
                  <div class={`flex items-center gap-4 mb-4 ${index % 2 === 0 ? 'md:flex-row-reverse' : 'flex-row'}`}>
                    <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center text-arkeon-gold group-hover:scale-110 group-hover:bg-arkeon-gold group-hover:text-arkeon-charcoal transition-all duration-500 shadow-lg border border-white/10">
                        <step.icon size={20} />
                    </div>
                    <h3 class="text-2xl font-bold text-white group-hover:text-arkeon-gold transition-colors">{step.title}</h3>
                  </div>

                  <p class="text-gray-400 leading-relaxed relative z-10 group-hover:text-gray-200 transition-colors">
                    {step.desc}
                  </p>
               </div>
               
            </div>
            

            {/* Empty Spacer for Desktop Balance */}
            <div class="hidden md:block flex-1"></div>
          </div>
          
        ))}
      </div>
      
    </div>
    
  </section>

  {/* CTA */}
  <section class="py-24 relative overflow-hidden text-center">
    <div class="absolute inset-0 bg-arkeon-blue/10 backdrop-blur-sm pointer-events-none"></div>
    <div class="relative z-10">
      <h2 class="text-3xl font-serif mb-8 text-white">Ready to start Step 01?</h2>
      <a href="/contact" class="px-10 py-4 bg-arkeon-gold text-arkeon-charcoal font-bold rounded-full hover:bg-white hover:scale-105 transition-all shadow-lg">
        Book a Strategy Call
      </a>
    </div>
  </section>
</BaseLayout>
---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';

const steps = [
  {
    number: "01",
    title: "Discovery",
    desc: "We start with a deep dive questionnaire and strategy call to understand your brand's core truth, audience, and goals."
  },
  {
    number: "02",
    title: "Strategy",
    desc: "We define the site architecture (sitemap), user journeys, and content strategy to ensure every page has a purpose."
  },
  {
    number: "03",
    title: "Design",
    desc: "We create high-fidelity moodboards and UI designs. This is where the visual story comes to life before we write a single line of code."
  },
  {
    number: "04",
    title: "Build",
    desc: "Using Astro and Tailwind CSS, we develop a pixel-perfect, responsive website. We focus on clean code and performance."
  },
  {
    number: "05",
    title: "Test",
    desc: "Rigorous QA testing across devices. We check for accessibility, load speeds, and browser compatibility."
  },
  {
    number: "06",
    title: "Launch & Support",
    desc: "We handle the deployment, analytics setup, and provide training. We stay onboard to ensure everything runs smoothly."
  }
];
---

<BaseLayout>
  <Seo 
    title="Our Process" 
    description="Arkeonâ€™s 6-step process: Discovery, Strategy, Design, Build, Test, Launch & Support." 
  />

  <section class="pt-32 pb-20 text-center">
    <div class="container mx-auto px-6">
      <h1 class="text-5xl font-serif mb-6">The Process</h1>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Great results aren't accidental. We follow a structured path to ensure clarity, creativity, and quality at every stage.
      </p>
    </div>
  </section>

  <section class="pb-32 relative">
    {/* Vertical Line for Desktop */}
    <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-px bg-white/10 -translate-x-1/2"></div>

    <div class="container mx-auto px-6">
      {steps.map((step, index) => (
        <div class={`relative flex flex-col md:flex-row gap-8 mb-20 ${index % 2 !== 0 ? 'md:flex-row-reverse' : ''}`}>
          
          {/* Content Side */}
          <div class="flex-1 md:text-right" data-aos={index % 2 !== 0 ? "fade-left" : "fade-right"}>
            <div class={`md:max-w-md ${index % 2 !== 0 ? 'mr-auto md:text-left' : 'ml-auto'}`}>
              <span class="text-6xl font-serif text-white/5 font-bold absolute -top-10 opacity-50 select-none">
                {step.number}
              </span>
              <h3 class="text-2xl font-bold text-arkeon-gold mb-4 relative z-10">{step.title}</h3>
              <p class="text-gray-400 leading-relaxed">{step.desc}</p>
            </div>
          </div>

          {/* Center Dot */}
          <div class="hidden md:flex items-start justify-center w-12 flex-shrink-0 relative z-10">
            <div class="w-3 h-3 bg-arkeon-gold rounded-full mt-2 ring-4 ring-arkeon-charcoal"></div>
          </div>

          {/* Empty Side for balance */}
          <div class="hidden md:block flex-1"></div>
        </div>
      ))}
    </div>
  </section>

  <section class="py-20 bg-arkeon-blue/10 text-center">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-serif mb-8">Ready to start Step 01?</h2>
      <a href="/contact" class="px-8 py-4 bg-arkeon-gold text-arkeon-charcoal font-bold rounded hover:bg-white transition-colors">
        Book a Strategy Call
      </a>
    </div>
  </section>
</BaseLayout>
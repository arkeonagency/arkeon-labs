---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';

// HORMZI OFFER DATA
const offers = [
  {
    name: "ORIGIN",
    subtitle: "Brand Foundation Accelerator",
    price: "ETB 25,000",
    timeline: "2 Weeks",
    scarcity: "Limited to 10 spots/month",
    outcome: "A high-performance narrative website that positions you as credible and ready to convert immediately.",
    deliverables: [
      "Narrative Landing Page (High Conversion)",
      "Visual Strategy Session",
      "Mobile-First Performance Architecture",
      "Lead Capture System"
    ],
    bonuses: [
      "üéÅ SEO Starter Pack (Google Indexing)",
      "üéÅ 14-Day 'Conversion Boost' Video Strategy",
      "üéÅ Launch Checklist PDF"
    ],
    guarantee: "30-Day Performance Warranty: We revise for free until you pass Google Core Web Vitals.",
    cta: "Secure Origin Spot"
  },
  {
    name: "EVOLUTION",
    subtitle: "Growth Website Engine",
    price: "ETB 35,000",
    timeline: "4‚Äì6 Weeks",
    scarcity: "Only 5 builds per cohort",
    highlight: true,
    outcome: "A multi-page conversion machine that educates audience, increases authority, and supports scaling.",
    deliverables: [
      "Multi-Page Structure (5-7 Pages)",
      "CMS Integration (Own your content)",
      "Advanced Motion & Interaction",
      "Technical SEO & Analytics Suite"
    ],
    bonuses: [
      "üéÅ 90-Day Content Playbook",
      "üéÅ Competitor UX Leak Report",
      "üéÅ Analytics + Clarity Training Call"
    ],
    guarantee: "90-Day Growth Support: Free conversion iteration if engagement targets aren't met.",
    cta: "Apply for Evolution"
  },
  {
    name: "PINNACLE",
    subtitle: "Interactive Brand Experience",
    price: "ETB 56,000+",
    timeline: "8‚Äì12 Weeks",
    scarcity: "Strictly 2 builds per year",
    outcome: "A best-in-class digital asset that positions you as an industry leader above all competitors.",
    deliverables: [
      "Unlimited Custom Templates",
      "Immersive WebGL / 3D Interactions",
      "App-Like Navigation (View Transitions)",
      "Custom Web Tools (Calculators/Portals)"
    ],
    bonuses: [
      "üéÅ Quarterly Conversion Audits",
      "üéÅ VIP Priority Support Queue",
      "üéÅ Launch Campaign Blueprint"
    ],
    guarantee: "Performance Premium: If it doesn't outperform your old metrics in 90 days, we redesign the main ux for free.",
    cta: "Inquire for Pinnacle"
  }
];
---

<BaseLayout>
  <Seo 
    title="Offers & Pricing" 
    description="Strategic digital offers designed for high ROI. Guaranteed performance and scarcity-based availability." 
  />

  <section class="pt-32 pb-20 text-center">
    <div class="container mx-auto px-6">
      <span class="text-arkeon-gold font-bold tracking-widest uppercase text-sm mb-4 block">The Value Equation</span>
      <h1 class="text-5xl md:text-7xl font-serif mb-8">Invest in Outcomes,<br/>Not Just Code.</h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto mb-16">
        We don't sell "websites." We sell digital assets that build trust, authority, and revenue. Choose the transformation that fits your current stage.
      </p>

      {/* OFFER STACK GRID */}
      <div class="grid lg:grid-cols-3 gap-8 text-left max-w-7xl mx-auto">
        {offers.map((offer) => (
          <div class={`relative flex flex-col p-8 rounded-2xl border ${offer.highlight ? 'border-arkeon-gold bg-arkeon-gold/5 ring-1 ring-arkeon-gold/50' : 'border-white/10 bg-white/5'} transition-transform hover:-translate-y-1 duration-300`}>
            
            {/* Scarcity Tag */}
            <div class="absolute top-0 right-0 bg-white/10 px-3 py-1 rounded-bl-xl rounded-tr-xl text-xs font-mono text-arkeon-gold border-l border-b border-white/10">
              {offer.scarcity}
            </div>

            {/* Header */}
            <div class="mb-6 border-b border-white/10 pb-6">
              <h3 class="text-2xl font-serif text-white">{offer.name}</h3>
              <p class="text-sm text-arkeon-gold font-bold uppercase tracking-wider mb-2">{offer.subtitle}</p>
              <div class="text-3xl font-bold text-white mt-4">{offer.price}</div>
              <p class="text-xs text-gray-500 mt-1">Timeline: {offer.timeline}</p>
            </div>

            {/* Dream Outcome */}
            <div class="mb-8">
              <p class="text-gray-300 text-sm leading-relaxed italic">"{offer.outcome}"</p>
            </div>

            {/* Deliverables */}
            <div class="mb-8 flex-grow">
              <h4 class="text-sm font-bold text-white mb-4 uppercase">Core Stack</h4>
              <ul class="space-y-3">
                {offer.deliverables.map(item => (
                  <li class="flex items-start gap-2 text-sm text-gray-400">
                    <span class="text-arkeon-gold mt-1">‚úì</span> {item}
                  </li>
                ))}
              </ul>
            </div>

            {/* Bonuses (The Value Add) */}
            <div class="mb-8 bg-black/20 p-4 rounded-lg border border-white/5">
              <h4 class="text-sm font-bold text-arkeon-gold mb-3 uppercase">Strategic Bonuses</h4>
              <ul class="space-y-2">
                {offer.bonuses.map(item => (
                  <li class="text-xs text-gray-300 flex gap-2">
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>

            {/* Risk Reversal (Guarantee) */}
            <div class="mb-8">
              <div class="flex items-start gap-2">
                <div class="min-w-[4px] h-full bg-green-500/50 rounded-full"></div>
                <p class="text-xs text-gray-400">
                  <span class="text-green-400 font-bold block mb-1">Risk Reversal:</span>
                  {offer.guarantee}
                </p>
              </div>
            </div>

            {/* CTA */}
            <a href="/contact" class={`block w-full text-center py-4 rounded-lg font-bold text-sm uppercase tracking-wide ${offer.highlight ? 'bg-arkeon-gold text-arkeon-charcoal hover:bg-white' : 'bg-white/10 hover:bg-white text-white hover:text-charcoal'} transition-all`}>
              {offer.cta}
            </a>
          </div>
        ))}
      </div>
      
      {/* Domain Ownership Note */}
      <div class="mt-16 bg-white/[0.02] border border-white/5 p-8 rounded-xl max-w-3xl mx-auto">
        <h3 class="text-lg font-bold text-white mb-2">Note on Domain Ownership</h3>
        <p class="text-gray-400 text-sm">
          We believe you should hold the "Title Deed" to your digital property. Domain names (e.g., yourbrand.com) are purchased directly by you (approx $15/yr) so you retain 100% legal ownership. We provide a <strong>Concierge Service</strong> to handle all the technical DNS setup for you on the call.
        </p>
      </div>

    </div>
  </section>
</BaseLayout>
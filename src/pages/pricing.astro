---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
import { Check, User } from 'lucide-react';

const pricingData = [
  {
    name: "Origin",
    price: "Birr 10k - Birr 15k",
    desc: "For startups needing a powerful narrative start.",
    // NEW: Specific Ideal Businesses
    idealFor: ["Local Consultants", "Early-Stage Startups"],
    features: [
      "1–3 Pages",
      "Narrative-driven Homepage",
      "Responsive Design",
      "Basic SEO Setup",
      "Contact Form Integration"
    ]
  },
  {
    name: "Evolution",
    price: "Birr 17k - Birr 20k",
    desc: "For growing brands needing SEO & interactions.",
    // NEW: Specific Ideal Businesses
    idealFor: ["Medical/Legal Firms", "Growing E-Commerce"],
    features: [
      "5–7 Pages",
      "CMS for Blog/Case Studies",
      "Advanced Animations",
      "SEO & Analytics",
      "Newsletter Integration"
    ],
    highlight: true
  },
  {
    name: "Pinnacle",
    price: "Birr 25k+",
    desc: "Full brand & digital experience for luxury players.",
    // NEW: Specific Ideal Businesses
    idealFor: ["Venture-Backed SaaS", "Luxury Hospitality"],
    features: [
      "Full Brand Identity System",
      "Custom Web App Features",
      "Complex Interactions",
      "Content Strategy",
      "Monthly Retainer Option"
    ]
  }
];
---

<BaseLayout>
  <Seo 
    title="Pricing" 
    description="Transparent pricing for Arkeon's web design and branding packages." 
  />

  <section class="pt-32 pb-20 text-center relative overflow-hidden">
    {/* Ambient Glows */}
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-arkeon-gold/5 blur-[120px] rounded-full pointer-events-none"></div>

    <div class="container mx-auto px-6 relative z-10">
      <h1 class="text-5xl md:text-7xl font-serif mb-6 text-white">
        Investment
      </h1>
      <p class="text-gray-300 max-w-2xl mx-auto mb-16 text-lg">
        We value transparency. While every project is unique, these ranges provide a baseline for our partnership tiers.
      </p>

      {/* Pricing Table */}
      <div class="grid md:grid-cols-3 gap-8 text-left max-w-6xl mx-auto">
        {pricingData.map((tier, i) => (
          <div 
            class={`flex flex-col p-8 rounded-2xl border backdrop-blur-md transition-all duration-500 hover:-translate-y-2 group ${
              tier.highlight 
                ? 'border-arkeon-gold/40 bg-arkeon-gold/5 shadow-[0_0_40px_rgba(230,197,91,0.1)]' 
                : 'border-white/10 bg-white/[0.02] hover:bg-white/[0.05]'
            }`}
          >
            {tier.highlight && (
                <div class="mb-4">
                    <span class="bg-arkeon-gold text-arkeon-charcoal text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider">Most Popular</span>
                </div>
            )}
            <h3 class="text-2xl font-serif mb-2 text-white group-hover:text-arkeon-gold transition-colors">{tier.name}</h3>
            <div class={`text-3xl font-bold mb-4 ${tier.highlight ? 'text-arkeon-gold' : 'text-gray-200'}`}>{tier.price}</div>
            <p class="text-sm text-gray-400 mb-6 leading-relaxed h-10">{tier.desc}</p>
            
            {/* Ideal For Section */}
            <div class="mb-8 p-4 bg-white/5 rounded-lg border border-white/5">
                <p class="text-[10px] text-arkeon-gold uppercase tracking-widest mb-3 font-bold flex items-center gap-2">
                    <User size={12} /> Ideal For
                </p>
                <div class="flex flex-wrap gap-2">
                    {tier.idealFor.map(biz => (
                        <span class="text-xs text-white bg-white/10 px-2 py-1 rounded border border-white/10">{biz}</span>
                    ))}
                </div>
            </div>
            
            <ul class="space-y-4 mb-8 border-t border-white/10 pt-6 flex-grow">
              {tier.features.map(feat => (
                <li class="flex items-start gap-3 text-sm text-gray-300">
                  <span class="text-arkeon-gold mt-0.5"><Check size={14} /></span> {feat}
                </li>
              ))}
            </ul>
            
            <a href="/contact" class={`block w-full text-center py-4 rounded-xl font-bold text-sm transition-all shadow-lg ${
              tier.highlight 
                ? 'bg-arkeon-gold text-arkeon-charcoal hover:bg-white hover:scale-105' 
                : 'bg-white/10 text-white hover:bg-white hover:text-arkeon-charcoal'
            }`}>
              Inquire
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* FAQ Section */}
  <section class="py-24 border-t border-white/5 relative">
    <div class="container mx-auto px-6 max-w-3xl relative z-10">
      <h2 class="text-3xl font-serif mb-12 text-center text-white">Common Questions</h2>
      
      <div class="space-y-10">
        <div class="bg-white/[0.02] border border-white/5 p-8 rounded-xl hover:border-white/10 transition-colors">
          <h3 class="text-xl font-bold text-white mb-3">What are the payment terms?</h3>
          <p class="text-gray-400 leading-relaxed">We typically require a 50% deposit to secure your slot in our schedule, with the remaining 50% due upon project completion and before final hand-off.</p>
        </div>
        <div class="bg-white/[0.02] border border-white/5 p-8 rounded-xl hover:border-white/10 transition-colors">
          <h3 class="text-xl font-bold text-white mb-3">Do you do hourly work?</h3>
          <p class="text-gray-400 leading-relaxed">We prefer project-based pricing as it focuses on value and deliverables rather than time. However, for ongoing maintenance, we offer monthly retainer packages.</p>
        </div>
        <div class="bg-white/[0.02] border border-white/5 p-8 rounded-xl hover:border-white/10 transition-colors">
          <h3 class="text-xl font-bold text-white mb-3">What platform do you use?</h3>
          <p class="text-gray-400 leading-relaxed">We specialize in Astro and React for high-performance, custom-coded sites. We can also integrate headless CMS solutions if you need to edit content frequently without touching code.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
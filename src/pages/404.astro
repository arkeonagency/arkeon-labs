---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
---

<BaseLayout>
  <Seo title="Page Not Found" />
  <section class="h-screen flex items-center justify-center text-center">
    <div class="container mx-auto px-6">
      <h1 class="text-9xl font-serif font-bold text-white/5 select-none">404</h1>
      <h2 class="text-3xl font-serif text-white mb-6 -mt-10 relative z-10">Page Not Found</h2>
      <p class="text-gray-400 mb-8 max-w-md mx-auto">
        The page you are looking for has moved or does not exist. Let's get you back on track.
      </p>
      <div class="flex justify-center gap-4">
        <a href="/" class="px-6 py-3 bg-arkeon-gold text-arkeon-charcoal font-bold rounded hover:bg-white transition-colors">
          Go Home
        </a>
        <a href="/work" class="px-6 py-3 border border-white/20 text-white font-bold rounded hover:bg-white/10 transition-colors">
          View Work
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
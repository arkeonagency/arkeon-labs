---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
import StatsCounter from '../components/StatsCounter.jsx';
import { Target, Heart, Zap, ShieldCheck } from 'lucide-react';

const values = [
  {
    icon: Target,
    title: "Precision",
    desc: "Every pixel and line of code serves a specific conversion goal. We don't guess; we measure."
  },
  {
    icon: Zap,
    title: "Velocity",
    desc: "Speed is the primary currency. We build systems that are fast to load and fast to launch."
  },
  {
    icon: ShieldCheck,
    title: "Ownership",
    desc: "You own your assets. No locked platforms. You control your code, domain, and data."
  },
  {
    icon: Heart,
    title: "Empathy",
    desc: "We design for humans, not robots. We obsess over the user journey to ensure they feel understood."
  }
];
---

<BaseLayout 
  title="About — Arkeon" 
  description="Arkeon is a premium web design & brand studio led by Bereket Tadele. We create story-driven websites for founders and luxury businesses."
>

  {/* HERO SECTION */}
  <section class="pt-32 pb-20 relative">
    <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-arkeon-gold/10 blur-[120px] rounded-full pointer-events-none"></div>
    <div class="container mx-auto px-6 text-center relative z-10">
      <h1 class="text-5xl md:text-7xl font-serif mb-8" data-aos="fade-up">
        Where Brands <span class="text-gradient-gold">Begin</span>
      </h1>
      <p class="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed" data-aos="fade-up" data-aos-delay="100">
        Arkeon was founded on a simple belief: <strong>Ethiopian brands deserve world-class digital representation.</strong>
      </p>
    </div>
  </section>

  {/* FOUNDER SECTION */}
  <section class="py-20 border-t border-white/5 relative">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-16 items-center relative z-10">
      <div data-aos="fade-right" class="relative">
        {/* Image Glow */}
        <div class="absolute inset-0 bg-arkeon-gold/20 blur-[50px] rounded-full transform scale-90"></div>
        <div class="aspect-square bg-gray-800 rounded-2xl overflow-hidden relative border border-white/10 rotate-3 hover:rotate-0 transition-all duration-700">
          
          {/* CHANGED: Using standard img tag pointing to public folder (Safer for Vercel) */}
          <img 
            src="/images/founder.jpg" 
            alt="Bereket Tadele" 
            width="800"
            height="800"
            loading="lazy"
            class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-500"
          />
          
        </div>
      </div>
      <div data-aos="fade-left">
        <span class="text-arkeon-gold font-serif text-2xl mb-2 block italic">Bereket Tadele</span>
        <h2 class="text-4xl font-bold mb-6 text-white">Founder & Lead Designer</h2>
        <div class="space-y-6 text-gray-300 leading-relaxed">
          <p>
            I am a graphic designer and web developer with a passion for building digital products that matter. With experience in building Telegram mini-apps and high-end marketing sites, I founded Arkeon to bridge the gap between aesthetic beauty and technical performance.
          </p>
          <p>
            My goal is simple: to help founders and luxury businesses tell their stories with clarity, precision, and impact.
          </p>
        </div>
        <div class="mt-8">
           {/* CHANGED: Using public path */}
           <img src="/images/signature.png" alt="Bereket Tadele Signature" class="h-12 opacity-80 invert" />
        </div>
      </div>
    </div>
  </section>

    {/* STATS COUNTER */}
  <section class="py-16 bg-black/20 border-t border-white/5" data-aos="fade-up">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-serif text-white mb-10 text-center">Impact by the Numbers</h2>
      <StatsCounter client:visible />
    </div>
  </section>

  {/* VALUES SECTION */}
  <section class="py-24 relative">
    <div class="absolute inset-0 bg-white/[0.02] pointer-events-none"></div>
    <div class="container mx-auto px-6 relative z-10">
      <h2 class="text-3xl font-serif mb-12 text-center text-white">Our Values</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {values.map((val, i) => (
          <div key={i} class="text-center p-8 border border-white/10 bg-white/5 backdrop-blur-sm rounded-xl hover:border-arkeon-gold/40 hover:bg-white/10 transition-all cursor-default group" data-aos="fade-up" data-aos-delay={i*100}>
            <div class="w-12 h-12 bg-arkeon-gold/10 text-arkeon-gold rounded-lg flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform">
              <val.icon size={24} />
            </div>
            <h3 class="text-xl font-bold text-gray-300 group-hover:text-white transition-colors mb-2">{val.title}</h3>
            <p class="text-sm text-gray-400 leading-relaxed">{val.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* CTA SECTION */}
  <section class="py-32 text-center relative overflow-hidden">
     <div class="absolute inset-0 bg-radial-gradient from-arkeon-blue/20 to-transparent opacity-30"></div>
     <div class="container mx-auto px-6 relative z-10">
        <h2 class="text-4xl font-serif mb-8 text-white">Let's build something lasting.</h2>
        <a href="/contact" class="text-arkeon-gold text-lg font-bold border-b border-arkeon-gold pb-1 hover:text-white hover:border-white transition-all">
          Start a project with us →
        </a>
     </div>
  </section>
</BaseLayout>
---
export const prerender = true;

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Seo from '../../components/Seo.jsx';
import CaseStudyCard from '../../components/CaseStudyCard.jsx';

// 1. Generate pages for every case study
export async function getStaticPaths() {
  const caseStudies = await getCollection('case-studies');
  return caseStudies.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// 2. Fetch "Other Projects" for the bottom section
const allProjects = await getCollection('case-studies');
// Filter out the current project and take the next 2
const nextProjects = allProjects
  .filter(p => p.slug !== entry.slug)
  .slice(0, 2);
---

<BaseLayout>
  <Seo 
    title={entry.data.title}
    description={entry.data.description}
    image={entry.data.heroImage}
  />

  <article>
    {/* Full-Bleed Hero Image */}
    <div class="relative w-full h-[60vh] md:h-[80vh]">
      <div class="absolute inset-0 bg-arkeon-charcoal/40 z-10"></div>
      {entry.data.heroImage && (
        <img 
          src={entry.data.heroImage} 
          alt={entry.data.title}
          class="w-full h-full object-cover"
        />
      )}
      
      {/* Hero Text Overlay */}
      <div class="absolute inset-0 z-20 flex flex-col justify-end pb-20 container mx-auto px-6">
        <span class="text-arkeon-gold uppercase tracking-widest font-bold text-sm mb-4">
          {entry.data.service || 'Case Study'}
        </span>
        <h1 class="text-5xl md:text-7xl font-serif text-white mb-6 max-w-4xl" data-aos="fade-up">
          {entry.data.title}
        </h1>
        <p class="text-xl text-gray-200 max-w-2xl border-l-2 border-arkeon-gold pl-6" data-aos="fade-up" data-aos-delay="100">
          {entry.data.description}
        </p>
      </div>
    </div>

    {/* Content Section */}
    <div class="bg-arkeon-charcoal text-white relative z-20">
      <div class="container mx-auto px-6 py-20 grid lg:grid-cols-[1fr_350px] gap-20">
        
        {/* Main Content (Markdown Rendered) */}
        <div class="prose prose-invert prose-lg max-w-none prose-headings:font-serif prose-headings:text-white prose-a:text-arkeon-gold prose-img:rounded-xl">
          <Content />
        </div>

        {/* Sidebar Info - Sticky */}
        <div class="space-y-10 h-fit lg:sticky lg:top-32">
          <div class="p-8 border border-white/10 rounded-xl bg-white/5 backdrop-blur-sm">
            <h3 class="font-serif text-xl mb-6 text-white">Project Details</h3>
            
            <div class="space-y-6">
              <div>
                <span class="block text-xs text-gray-500 uppercase tracking-wider mb-1">Client</span>
                <span class="text-white font-medium">{entry.data.client || entry.data.title}</span>
              </div>
              
              {entry.data.service && (
                <div>
                  <span class="block text-xs text-gray-500 uppercase tracking-wider mb-1">Service</span>
                  <span class="text-white font-medium">{entry.data.service}</span>
                </div>
              )}

              {entry.data.outcome && (
                <div>
                  <span class="block text-xs text-gray-500 uppercase tracking-wider mb-1">Outcome</span>
                  <span class="text-white font-medium">{entry.data.outcome}</span>
                </div>
              )}
            </div>

            {/* Visit Live Site Button */}
            {entry.data.websiteUrl && (
              <div class="mt-8 pt-8 border-t border-white/10">
                <a 
                  href={entry.data.websiteUrl} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="flex items-center justify-center gap-2 w-full py-3 bg-white/10 text-white font-bold rounded hover:bg-arkeon-gold hover:text-arkeon-charcoal transition-all group"
                >
                  Visit Live Site 
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                </a>
              </div>
            )}

            <div class="mt-4">
              <a href="/contact" class="block w-full text-center py-3 bg-arkeon-gold text-arkeon-charcoal font-bold rounded hover:bg-white transition-colors">
                Start Similar Project
              </a>
            </div>
          </div>
        </div>

      </div>
    </div>

    {/* More Projects Section (Keep User Browsing) */}
    {nextProjects.length > 0 && (
      <section class="py-20 bg-black/20 border-t border-white/5">
        <div class="container mx-auto px-6">
          <div class="flex justify-between items-end mb-12">
            <h2 class="text-3xl font-serif">More Selected Work</h2>
            <a href="/work" class="text-sm text-arkeon-gray hover:text-white">View all projects â†’</a>
          </div>

          <div class="grid md:grid-cols-2 gap-10">
            {nextProjects.map((project) => (
              <CaseStudyCard 
                client:visible
                title={project.data.title}
                category={project.data.service || "Web Design"}
                image={project.data.heroImage || "/images/placeholder.jpg"}
                href={`/work/${project.slug}`}
              />
            ))}
          </div>
        </div>
      </section>
    )}
    
    {/* Navigation Footer */}
    <div class="border-t border-white/5 py-12 bg-arkeon-charcoal">
      <div class="container mx-auto px-6 text-center">
        <a href="/contact" class="text-2xl md:text-3xl font-serif text-white hover:text-arkeon-gold transition-colors">
          Ready to begin your journey? <span class="underline underline-offset-4 decoration-arkeon-gold">Start a project.</span>
        </a>
      </div>
    </div>
  </article>
</BaseLayout>
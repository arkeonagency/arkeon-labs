---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Seo from '../../components/Seo.jsx';
import { ArrowLeft, ExternalLink, Code2, Cpu } from 'lucide-react';
import { Image } from 'astro:assets';
import amanThumb from '../../assets/images/aman.jpg';
import nouraThumb from '../../assets/images/noura.jpg';

import heroImage from '../../assets/images/divinex.jpg';
import detailImage from '../../assets/images/alldevice.jpg'; // Replace if you have a detail shot

---

<BaseLayout>
  <Seo 
    title="DivineX â€” Case Study" 
    description="DivineX Creative Agency website built by Arkeon. A high-performance, visually immersive digital experience." 
  />

  <section class="pt-32 pb-20 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-purple-500/10 blur-[150px] rounded-full pointer-events-none"></div>
    <div class="container mx-auto px-6 relative z-10">
      <a href="/work" class="inline-flex items-center gap-2 text-arkeon-gold text-sm mb-8 hover:underline">
        <ArrowLeft size={16} /> Back to Work
      </a>
      
      <h1 class="text-5xl md:text-7xl font-serif font-bold mb-8 text-white">
        DivineX <br/><span class="text-gradient-gold text-4xl md:text-6xl">Immersive Digital</span>
      </h1>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 border-y border-white/10 py-8 mb-12">
        <div><span class="text-xs text-gray-500 uppercase tracking-widest block mb-1">Role</span><span class="text-white font-medium">Full Stack Dev</span></div>
        <div><span class="text-xs text-gray-500 uppercase tracking-widest block mb-1">Stack</span><span class="text-white font-medium">React / Vite</span></div>
        <div><span class="text-xs text-gray-500 uppercase tracking-widest block mb-1">Timeline</span><span class="text-white font-medium">3 Weeks</span></div>
        <div class="flex items-center">
            <a href="https://divinex-creative-agency.vercel.app/" target="_blank" class="text-arkeon-gold font-bold flex items-center gap-2 hover:text-white transition-colors">Live Site <ExternalLink size={14} /></a>
        </div>
      </div>

      <div class="w-full aspect-[21/9] bg-gray-800 rounded-2xl overflow-hidden border border-white/10 shadow-2xl">
        <Image src={heroImage} alt="DivineX Hero" class="w-full h-full object-cover" width={1600} quality="85" loading="eager" fetchpriority="high"/>
      </div>
    </div>
  </section>

  <section class="py-24">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-16">
        <div>
            <h2 class="text-3xl font-serif text-white mb-6">The Concept</h2>
            <p class="text-gray-400 leading-relaxed text-lg mb-8">
                DivineX required a digital presence that mirrored their creative philosophy: bold, modern, and forward-thinking. The goal was to step away from traditional corporate layouts and create an immersive journey.
            </p>
        </div>
        <div class="bg-purple-900/10 p-8 rounded-2xl border border-purple-500/20">
            <h3 class="text-xl font-bold text-white mb-4">Technical Goals</h3>
            <ul class="space-y-4">
                <li class="flex items-start gap-3 text-gray-300"><Code2 className="text-arkeon-gold" /> Dark Mode Native Architecture</li>
                <li class="flex items-start gap-3 text-gray-300"><Cpu className="text-arkeon-gold" /> Zero-Layout Shift (CLS) Score</li>
                <li class="flex items-start gap-3 text-gray-300"><ExternalLink className="text-arkeon-gold" /> Seamless Page Transitions</li>
            </ul>
        </div>
    </div>
  </section>

  <section class="py-24 bg-white/[0.02] border-y border-white/5 relative">
    <div class="container mx-auto px-6 text-center max-w-4xl">
        <span class="text-arkeon-gold text-sm font-bold uppercase tracking-widest mb-2 block">The Execution</span>
        <h2 class="text-4xl font-serif text-white mb-12">Dark Mode Aesthetic</h2>
        <div class="grid md:grid-cols-3 gap-6">
            <div class="md:col-span-2">
                <Image src={detailImage} class="rounded-xl border border-white/10 shadow-lg w-full" alt="Main UI" />
            </div>
            <div class="bg-black/40 p-6 rounded-xl border border-white/10 text-left">
                <h4 class="text-white font-bold mb-2">Typography</h4>
                <p class="text-sm text-gray-400">High contrast sans-serif fonts to ensure readability against deep charcoal backgrounds.</p>
                <div class="mt-8">
                     <h4 class="text-white font-bold mb-2">Gradients</h4>
                     <div class="h-4 w-full bg-gradient-to-r from-purple-500 to-blue-500 rounded-full"></div>
                </div>
            </div>
        </div>
    </div>
  </section>

  {/* NAV */}
  <section class="py-20 border-t border-white/5 bg-white/[0.02]">
    <div class="container mx-auto px-6">
        <h3 class="text-2xl font-serif text-white mb-8">More Selected Work</h3>
        <div class="grid md:grid-cols-2 gap-8">
            <a href="/work/aman-dental" class="group block relative overflow-hidden rounded-2xl aspect-[16/9] border border-white/10">
            <Image src={amanThumb} alt="Noura" class="w-full h-full object-cover absolute inset-0" />
                <div class="absolute inset-0 bg-black/60 group-hover:bg-black/40 transition-colors flex items-center justify-center z-10">
                    <div class="text-center">
                        <span class="text-arkeon-gold text-xs font-bold uppercase tracking-widest">Next Project</span>
                        <h4 class="text-3xl font-serif text-white mt-2 group-hover:underline decoration-arkeon-gold underline-offset-4">Aman Dental</h4>
                    </div>
                </div>
            </a>
            <a href="/work/noura-skincare" class="group block relative overflow-hidden rounded-2xl aspect-[16/9] border border-white/10">
            <Image src={nouraThumb} alt="Noura" class="w-full h-full object-cover absolute inset-0" />
                <div class="absolute inset-0 bg-black/60 group-hover:bg-black/40 transition-colors flex items-center justify-center z-10">
                    <div class="text-center">
                        <span class="text-arkeon-gold text-xs font-bold uppercase tracking-widest">Next Project</span>
                        <h4 class="text-3xl font-serif text-white mt-2 group-hover:underline decoration-arkeon-gold underline-offset-4">Noura Skincare</h4>
                    </div>
                </div>
            </a>
        </div>
    </div>
  </section>
  
  <section class="py-20 text-center border-t border-white/5">
    <div class="container mx-auto px-6">
      <h3 class="text-2xl font-serif text-white mb-6">Want a site like this?</h3>
      <a href="/contact" class="px-8 py-3 bg-arkeon-gold text-arkeon-charcoal font-bold rounded-full hover:scale-105 transition-transform shadow-lg">Start Project</a>
    </div>
  </section>
</BaseLayout>
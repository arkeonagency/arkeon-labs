---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
import { getCollection } from 'astro:content';

// Fetch and sort posts by Date (Newest first)
const posts = (await getCollection('posts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout>
  <Seo title="Insights" description="Thoughts on design and strategy." />

  <section class="pt-32 pb-20">
    <div class="container mx-auto px-6">
      <h1 class="text-5xl md:text-7xl font-serif font-bold mb-6">Insights</h1>
      <p class="text-xl text-arkeon-gray mb-16">
        Strategies for brands that want to lead.
      </p>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="group">
            <div class="overflow-hidden rounded-xl mb-4 border border-white/10">
              <img 
                src={post.data.heroImage || "/images/placeholder.jpg"} 
                alt={post.data.title}
                class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500"
              />
            </div>
            <div class="flex items-center gap-2 text-xs text-arkeon-gold mb-2">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-us', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
              <span>â€¢</span>
              <span>{post.data.author}</span>
            </div>
            <h2 class="text-xl font-bold text-white group-hover:text-arkeon-gold transition-colors mb-2">
              {post.data.title}
            </h2>
            <p class="text-sm text-gray-400 line-clamp-2">
              {post.data.description}
            </p>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
---
export const prerender = true; // Fixes "Type Error" crashes

import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.jsx';
import Seo from '../components/Seo.jsx';
import CaseStudyCard from '../components/CaseStudyCard.jsx';
import TestimonialMarquee from '../components/TestimonialMarquee.jsx';
import { getCollection } from 'astro:content';

// 1. Fetch Data
const testimonials = await getCollection('testimonials');
const allWork = await getCollection('case-studies');

// 2. Sort work and take first 3
const featuredWork = allWork.slice(0, 3);

// 3. NEW: Hormozi Offer Data (Synced with Pricing Page)
const offers = [
  { 
    title: "ORIGIN", 
    subtitle: "Brand Foundation Accelerator",
    desc: "Instant credibility. A high-performance narrative website ready in 2 weeks.", 
    price: "ETB 25,000" 
  },
  { 
    title: "EVOLUTION", 
    subtitle: "Growth Website Engine",
    desc: "A scalable content machine with CMS and analytics to build authority.", 
    price: "ETB 35,000",
    highlight: true 
  },
  { 
    title: "PINNACLE", 
    subtitle: "Interactive Brand Experience",
    desc: "Industry dominance via immersive 3D interactions and custom web apps.", 
    price: "ETB 56,000++" 
  }
];
---

<BaseLayout>
  <Seo 
    title="Arkeon — Premium Web Design & Brand Studio"
    description="Arkeon is a premium web design agency in Addis Ababa. We build high-performance, story-driven websites and brand identities for startups and luxury businesses."
  />

  <Hero client:load />

  {/* Intro Blurb */}
  <section class="py-20 bg-arkeon-charcoal" data-aos="fade-up">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-serif leading-snug mb-6">
          Every brand has an origin story. <br/>
          <span class="text-arkeon-gray">At Arkeon, we craft the digital beginnings of great brands.</span>
        </h2>
        <p class="text-lg text-gray-400">
          We combine strategic thinking, elegant design, and technical excellence to create digital assets that look premium and perform.
        </p>
      </div>
    </div>
  </section>

  {/* NEW: Offers Preview (Synced) */}
  <section class="py-20 border-t border-white/5">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-serif font-bold text-white">Choose Your Transformation</h2>
        <p class="text-gray-400 mt-2">Strategic outcomes tailored to your business stage.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {offers.map((offer, index) => (
          <div 
            class={`p-8 border rounded-2xl transition-all duration-300 hover:-translate-y-2 ${
              offer.highlight 
                ? 'border-arkeon-gold/30 bg-arkeon-gold/5' 
                : 'border-white/10 bg-white/5 hover:bg-white/10'
            }`}
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="mb-4">
              <h3 class="text-2xl font-serif text-white mb-1">{offer.title}</h3>
              <p class="text-xs text-arkeon-gold font-bold uppercase tracking-widest">{offer.subtitle}</p>
            </div>
            
            <div class="text-2xl font-bold text-white mb-4">{offer.price}</div>
            
            <p class="text-gray-400 text-sm mb-8 leading-relaxed h-16">{offer.desc}</p>
            
            <a 
              href="/pricing" 
              class={`block w-full text-center py-3 rounded font-bold text-sm ${
                offer.highlight 
                  ? 'bg-arkeon-gold text-arkeon-charcoal hover:bg-white' 
                  : 'border border-white/20 text-white hover:bg-white hover:text-arkeon-charcoal'
              } transition-colors`}
            >
              View Offer Details
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Featured Work */}
  <section class="py-24 bg-black/20">
    <div class="container mx-auto px-6">
      <div class="flex justify-between items-end mb-12">
        <h2 class="text-4xl font-serif">Selected Work</h2>
        <a href="/work" class="text-sm text-arkeon-gray hover:text-white">View all projects →</a>
      </div>
      
      {/* Dynamic Grid */}
      <div class="grid md:grid-cols-3 gap-8">
        {featuredWork.length > 0 ? (
          featuredWork.map((project) => (
            <CaseStudyCard 
              client:visible
              title={project.data.title}
              category={project.data.service || "Case Study"}
              image={project.data.heroImage || "https://images.unsplash.com/photo-1551836022-d5d88e9218df"}
              href={`/work/${project.slug}`} 
            />
          ))
        ) : (
          <p class="text-white">No projects found.</p>
        )}
      </div>
    </div>
  </section>

  {/* Why Arkeon */}
  <section class="py-24">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-12 text-center md:text-left">
        <div data-aos="fade-up">
          <h3 class="text-xl font-bold text-white mb-4">Story-Driven Design</h3>
          <p class="text-gray-400 text-sm leading-relaxed">We don't just decorate; we translate your business value into a visual narrative that connects with humans.</p>
        </div>
        <div data-aos="fade-up" data-aos-delay="100">
          <h3 class="text-xl font-bold text-white mb-4">Design + Development</h3>
          <p class="text-gray-400 text-sm leading-relaxed">No hand-off friction. We build what we design, ensuring pixel-perfect execution and high performance.</p>
        </div>
        <div data-aos="fade-up" data-aos-delay="200">
          <h3 class="text-xl font-bold text-white mb-4">Local & Premium</h3>
          <p class="text-gray-400 text-sm leading-relaxed">Based in Addis Ababa with global standards. We bring international quality to local and remote partnerships.</p>
        </div>
      </div>
    </div>
  </section>

  {/* Dynamic Testimonials */}
  <section>
     <TestimonialMarquee client:load testimonials={testimonials} />
  </section>

  {/* Footer CTA */}
  <section class="py-32 text-center">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl md:text-5xl font-serif mb-8">Ready to begin?</h2>
      <a 
        href="/contact" 
        class="inline-block px-10 py-4 bg-arkeon-white text-arkeon-charcoal text-lg font-bold rounded hover:bg-arkeon-gold transition-colors"
      >
        Start Your Project
      </a>
    </div>
  </section>
</BaseLayout>
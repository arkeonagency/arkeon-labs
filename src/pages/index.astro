---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.jsx';
import Seo from '../components/Seo.jsx';
import CaseStudyCard from '../components/CaseStudyCard.jsx';
import LogoMarquee from '../components/LogoMarquee.jsx';
---

<BaseLayout>
  <Seo 
    title="Home" 
    description="Arkeon builds premium, story-first websites and brand identities for startups and luxury brands." 
  />

  <Hero client:load />
  {/* NEW: Logo Marquee */}
<LogoMarquee client:load />

{/* Intro Blurb - Transparent BG to let global glow show */}
  {/* Intro Blurb */}
  <section class="py-24 relative" data-aos="fade-up">
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-5xl font-serif leading-tight mb-8">
          Every brand has an origin story. <br/>
          <span class="text-gray-400">At Arkeon, we craft the </span>
          <span class="text-gradient-gold">digital beginnings of great brands.</span>
        </h2>
        <p class="text-lg text-gray-400 leading-relaxed">
          We combine strategic thinking, elegant design, and technical excellence to create websites that look premium and perform.
        </p>
      </div>
    </div>
  </section>

  {/* Services Preview - WHOLE CARD CLICKABLE */}
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8">
        {[
          { title: "Origin", desc: "For startups needing a powerful narrative start.", price: "Starter" },
          { title: "Evolution", desc: "For growing brands needing SEO & interactions.", price: "Premium" },
          { title: "Pinnacle", desc: "Full brand & digital experience for luxury players.", price: "Luxury" }
        ].map((service, index) => (
          /* CHANGED: Div is now an Anchor Tag (A) */
          <a 
            href={`/services/${service.title.toLowerCase()}`}
            class="group block p-8 border border-white/5 rounded-2xl bg-white/[0.02] backdrop-blur-sm hover:bg-white/[0.05] hover:border-arkeon-gold/30 transition-all duration-500 relative overflow-hidden"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            {/* Hover Glow Effect */}
            <div class="absolute inset-0 bg-gradient-to-br from-arkeon-gold/0 via-arkeon-gold/0 to-arkeon-gold/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <h3 class="text-3xl font-serif mb-2 text-white group-hover:text-arkeon-gold transition-colors">{service.title}</h3>
            <span class="inline-block px-2 py-1 rounded bg-white/5 text-[10px] text-arkeon-gold uppercase tracking-widest border border-white/10 mb-4">{service.price}</span>
            <p class="text-gray-400 text-sm mb-8 leading-relaxed relative z-10">{service.desc}</p>
            
            <span class="inline-flex items-center gap-2 text-sm font-bold text-white group-hover:text-arkeon-gold transition-colors relative z-10">
              View Deliverables <span class="group-hover:translate-x-1 transition-transform">→</span>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  {/* Featured Work */}
  <section class="py-32 bg-black/30 border-y border-white/5 relative">
    <div class="absolute top-0 right-0 w-[300px] h-[300px] bg-arkeon-blue/20 blur-[120px] rounded-full pointer-events-none"></div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-4">
        <div>
           <span class="text-arkeon-gold text-xs font-bold tracking-widest uppercase mb-2 block">Portfolio</span>
           <h2 class="text-4xl md:text-5xl font-serif text-white">Selected Work</h2>
        </div>
        <a href="/work" class="text-sm text-gray-400 hover:text-white border-b border-white/20 pb-1 hover:border-white transition-all">View all projects →</a>
      </div>
      <div class="grid md:grid-cols-3 gap-10">
        <CaseStudyCard 
          title="Aman Dental"
          category="Healthcare"
          image="images/aman.jpg"
          href="/work/aman-dental"
        />
        <CaseStudyCard 
          title="NOURA Skincare"
          category="E-Commerce"
          image="images/noura.jpg"
          href="/work/noura-skincare"
        />
        <CaseStudyCard 
          title="Divinex"
          category="Creative"
          image="images/divinex.jpg"
          href="/work/divinex"
        />
      </div>
    </div>
  </section>

  {/* Why Arkeon */}
  <section class="py-32 relative overflow-hidden">
     <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-arkeon-gold/5 blur-[100px] rounded-full pointer-events-none"></div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="grid md:grid-cols-3 gap-16 text-center md:text-left">
        <div data-aos="fade-up">
          <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center mb-6 mx-auto md:mx-0 border border-white/10 text-arkeon-gold">
             <span class="font-serif text-xl italic">1</span>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Story-Driven Design</h3>
          <p class="text-gray-400 text-sm leading-relaxed">We don't just decorate; we translate your business value into a visual narrative that connects with humans.</p>
        </div>
        <div data-aos="fade-up" data-aos-delay="100">
          <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center mb-6 mx-auto md:mx-0 border border-white/10 text-arkeon-gold">
             <span class="font-serif text-xl italic">2</span>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Design + Development</h3>
          <p class="text-gray-400 text-sm leading-relaxed">No hand-off friction. We build what we design, ensuring pixel-perfect execution and high performance.</p>
        </div>
        <div data-aos="fade-up" data-aos-delay="200">
           <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center mb-6 mx-auto md:mx-0 border border-white/10 text-arkeon-gold">
             <span class="font-serif text-xl italic">3</span>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Local & Premium</h3>
          <p class="text-gray-400 text-sm leading-relaxed">Based in Addis Ababa with global standards. We bring international quality to local and remote partnerships.</p>
        </div>
      </div>
    </div>
  </section>

  {/* Testimonials */}
  <section class="py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-white/[0.02]"></div>
    
    <div class="container mx-auto px-6 mb-12 text-center relative z-10">
       <h2 class="text-3xl font-serif text-white">Client Stories</h2>
    </div>

    <div class="absolute top-0 bottom-0 left-0 w-24 z-20 bg-gradient-to-r from-arkeon-charcoal to-transparent pointer-events-none"></div>
    <div class="absolute top-0 bottom-0 right-0 w-24 z-20 bg-gradient-to-l from-arkeon-charcoal to-transparent pointer-events-none"></div>

    <div class="relative w-full overflow-hidden">
      <div class="flex gap-8 w-max animate-scroll hover:pause">
        {[...Array(2)].map(() => (
          <>
            {[
              {
                quote: "Arkeon transformed our website into a true brand asset. The attention to detail is unmatched.",
                author: "Sarah Jenkins",
                role: "CEO, Horizon Labs"
              },
              {
                quote: "The best investment we made this year. They understood our luxury positioning perfectly.",
                author: "David Alazar",
                role: "Founder, Aman Dental"
              },
              {
                quote: "Technical perfection. Our site loads instantly and our SEO ranking skyrocketed.",
                author: "Michael Ross",
                role: "CTO, FinTech Global"
              },
              {
                quote: "They don't just build websites, they build businesses. The strategy phase was eye-opening.",
                author: "Elena K.",
                role: "Director, Noura Skincare"
              }
            ].map((item) => (
              <div class="w-[350px] md:w-[450px] p-8 md:p-10 rounded-2xl border border-white/5 bg-white/5 backdrop-blur-md flex-shrink-0 hover:border-arkeon-gold/30 transition-colors cursor-default">
                <div class="flex gap-1 mb-4">
                  {[1,2,3,4,5].map(() => <span class="text-arkeon-gold text-sm">★</span>)}
                </div>
                <p class="text-lg text-gray-200 font-serif italic mb-6 leading-relaxed">"{item.quote}"</p>
                <div class="flex items-center gap-4">
                  <div class="w-10 h-10 rounded-full bg-gradient-to-br from-gray-700 to-black border border-white/10 flex items-center justify-center text-xs font-bold text-white">
                    {item.author.charAt(0)}
                  </div>
                  <div>
                    <p class="text-white text-sm font-bold">{item.author}</p>
                    <p class="text-arkeon-gold text-xs uppercase tracking-wider">{item.role}</p>
                  </div>
                </div>
              </div>
            ))}
          </>
        ))}
      </div>
    </div>
    <style>
      @keyframes scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
      }
      .animate-scroll {
        animation: scroll 40s linear infinite;
      }
      .hover\:pause:hover {
        animation-play-state: paused;
      }
    </style>
  </section>

  {/* Footer CTA */}
  <section class="py-40 text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-radial-gradient from-arkeon-gold/10 to-transparent opacity-50"></div>
    <div class="container mx-auto px-6 relative z-10">
      <h2 class="text-5xl md:text-7xl font-serif mb-10 text-white">Ready to begin?</h2>
      <a 
        href="/contact" 
        class="inline-block px-12 py-5 bg-arkeon-white text-arkeon-charcoal text-lg font-bold rounded-full hover:scale-105 hover:bg-arkeon-gold transition-all duration-300 shadow-[0_0_40px_rgba(255,255,255,0.2)]"
      >
        Start Your Project
      </a>
    </div>
  </section>
</BaseLayout>
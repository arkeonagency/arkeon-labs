---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';

const packages = [
  {
    name: "Origin",
    tag: "The Starter",
    desc: "1–3 pages, narrative-driven homepage, responsive, micro-interactions.",
    price: "$1,500 – $2,500",
    features: ["Strategic Homepage", "Contact / About Sections", "Mobile Responsive", "Basic SEO", "1 Week Support"]
  },
  {
    name: "Evolution",
    tag: "The Premium",
    desc: "5–7 pages, case study templates, SEO-ready, advanced interactions.",
    price: "$3,500 – $5,500",
    features: ["Full CMS Integration", "Blog / News Section", "Advanced Animations", "Technical SEO Setup", "Analytics Dashboard", "1 Month Support"],
    highlight: true
  },
  {
    name: "Pinnacle",
    tag: "The Luxury",
    desc: "Full brand + site experience, advanced interactions, dynamic content, retainer option.",
    price: "$6,000 – $12,000+",
    features: ["Complete Brand Identity", "Custom Web App Features", "3D Elements (Optional)", "Content Strategy", "Priority Support", "Quarterly Retainers"]
  }
];
---

<BaseLayout>
  <Seo 
    title="Services" 
    description="Premium brand, website, and digital experiences packages: Origin, Evolution, and Pinnacle." 
  />

  <section class="pt-32 pb-20">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-6xl font-serif mb-6">Services</h1>
      <p class="text-xl text-arkeon-gray max-w-2xl mx-auto">
        We offer focused services for founders and brands who want to look and perform like market leaders. Choose the path that fits your ambition.
      </p>
    </div>
  </section>

  <section class="pb-32">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8">
        {packages.map((pkg, i) => (
          <div 
            class={`relative p-8 rounded-xl border ${pkg.highlight ? 'border-arkeon-gold bg-arkeon-gold/5' : 'border-white/10 bg-white/5'} flex flex-col`}
            data-aos="fade-up"
            data-aos-delay={i * 100}
          >
            {pkg.highlight && (
              <span class="absolute top-0 right-0 bg-arkeon-gold text-arkeon-charcoal text-xs font-bold px-3 py-1 rounded-bl-lg rounded-tr-lg">
                MOST POPULAR
              </span>
            )}
            <h3 class="text-3xl font-serif mb-2">{pkg.name}</h3>
            <span class="text-sm text-arkeon-gold font-medium uppercase tracking-wider mb-4 block">{pkg.tag}</span>
            <p class="text-gray-400 text-sm mb-8 flex-grow">{pkg.desc}</p>
            
            <div class="mb-8">
              <span class="text-2xl font-bold text-white block">{pkg.price}</span>
              <span class="text-xs text-gray-500">(Depending on scope)</span>
            </div>

            <ul class="space-y-3 mb-8">
              {pkg.features.map(feat => (
                <li class="flex items-start gap-2 text-sm text-gray-300">
                  <span class="text-arkeon-gold mt-1">✓</span> {feat}
                </li>
              ))}
            </ul>

            <a 
              href="/contact" 
              class={`w-full py-3 rounded text-center font-bold text-sm transition-colors ${
                pkg.highlight 
                ? 'bg-arkeon-gold text-arkeon-charcoal hover:bg-white' 
                : 'border border-white/20 text-white hover:bg-white/10'
              }`}
            >
              Schedule a Call
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
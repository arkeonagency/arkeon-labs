---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
import { PenTool, Monitor, Code2, ArrowRight, Zap, Search, Layout } from 'lucide-react';

const services = [
  {
    icon: PenTool,
    title: "Brand Identity",
    desc: "A brand is more than a logo. It is the gut feeling a person has about your product.",
    details: ["Visual Strategy", "Logo Design", "Typography Systems", "Voice & Tone", "Brand Guidelines"]
  },
  {
    icon: Monitor,
    title: "UI/UX Design",
    desc: "We design interfaces that are intuitive, accessible, and delight users at every touchpoint.",
    details: ["Wireframing", "High-Fidelity UI", "Interactive Prototypes", "Design Systems", "Motion Design"]
  },
  {
    icon: Code2,
    title: "Web Development",
    desc: "Pixel-perfect implementation using modern architectures for speed and scalability.",
    details: ["Astro + React", "Headless CMS", "Animation (GSAP/Framer)", "SEO Optimization", "Performance Tuning"]
  }
];

const packages = [
  {
    name: "Origin",
    desc: "For startups needing a powerful narrative start.",
    price: "From Birr 10k - Birr 15k",
    idealFor: "Seed Stage • Solopreneurs • Local Consultants • Early-Stage Startups"
  },
  {
    name: "Evolution",
    desc: "For growing brands needing SEO & complex interactions.",
    price: "From Birr 17k - Birr 20k",
    idealFor: "Growth Stage • SMEs • Medical/Legal Firms • Growing E-Commerce",
    highlight: true
  },
  {
    name: "Pinnacle",
    desc: "Full brand & digital experience for luxury players.",
    price: "From Birr 25k+",
    idealFor: "Established • Luxury Brands• Venture-Backed SaaS • Luxury Hospitality"
  }
];
---

<BaseLayout>
  <Seo 
    title="Capabilities" 
    description="Strategic branding, UI/UX design, and modern web development services by Arkeon." 
  />

  {/* HERO */}
  <section class="pt-32 pb-20 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-arkeon-gold/10 blur-[120px] rounded-full pointer-events-none"></div>
    <div class="container mx-auto px-6 text-center relative z-10">
      <h1 class="text-5xl md:text-7xl font-serif mb-6 text-white">
        Capabilities & <span class="text-gradient-gold">Craft</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed">
        We bridge the gap between strategic thinking and technical excellence. We don't just build websites; we build digital assets that drive business growth.
      </p>
    </div>
  </section>

  {/* DISCIPLINES GRID */}
  <section class="py-20 relative z-10">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8">
        {services.map((s, i) => (
          <div 
            class="p-8 border border-white/10 bg-white/[0.02] backdrop-blur-md rounded-2xl hover:bg-white/[0.05] hover:border-arkeon-gold/30 transition-all duration-500 group"
            data-aos="fade-up"
            data-aos-delay={i * 100}
          >
            <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center mb-6 text-arkeon-gold group-hover:scale-110 transition-transform">
              <s.icon size={24} />
            </div>
            <h3 class="text-2xl font-serif text-white mb-4">{s.title}</h3>
            <p class="text-gray-400 mb-8 leading-relaxed h-24">{s.desc}</p>
            <ul class="space-y-3 border-t border-white/5 pt-6">
              {s.details.map(item => (
                <li class="flex items-center gap-2 text-sm text-gray-300">
                  <div class="w-1.5 h-1.5 bg-arkeon-gold rounded-full"></div> {item}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* DEEP DIVE: STRATEGY */}
  <section class="py-24 border-t border-white/5 relative overflow-hidden">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-16 items-center">
      <div data-aos="fade-right">
        <span class="text-arkeon-gold text-sm font-bold uppercase tracking-widest mb-2 block">The Foundation</span>
        <h2 class="text-4xl font-serif text-white mb-6">Strategy Before Pixels</h2>
        <p class="text-gray-300 mb-6 leading-relaxed">
          Most agencies jump straight to design. We start with the "Why." Before we draw a single wireframe, we define your user personas, your market positioning, and your conversion goals.
        </p>
        <div class="grid grid-cols-2 gap-6 mt-8">
            <div class="bg-white/5 p-4 rounded-lg">
                <Search className="text-arkeon-gold mb-3" size={24} />
                <h4 class="text-white font-bold mb-1">Discovery</h4>
                <p class="text-xs text-gray-400">Market research & competitor analysis.</p>
            </div>
            <div class="bg-white/5 p-4 rounded-lg">
                <Layout className="text-arkeon-gold mb-3" size={24} />
                <h4 class="text-white font-bold mb-1">Architecture</h4>
                <p class="text-xs text-gray-400">Sitemap & User Journey planning.</p>
            </div>
        </div>
      </div>
      <div class="relative h-[400px] rounded-2xl overflow-hidden" data-aos="fade-left">
        <div class="absolute inset-0 bg-arkeon-charcoal/20 z-10"></div>
        <img src="images/strategy.jpg" alt="Strategy Session" class="w-full h-full object-cover" />
      </div>
    </div>
  </section>

  {/* DEEP DIVE: TECH */}
  <section class="py-24 relative overflow-hidden bg-white/[0.02]">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-16 items-center">
       <div class="relative h-[400px] rounded-2xl overflow-hidden order-2 md:order-1" data-aos="fade-right">
        <div class="absolute inset-0 bg-arkeon-charcoal/20 z-10"></div>
        <img src="images/alldevice.jpg" alt="Coding" class="w-full h-full object-cover" />
      </div>
      
      <div data-aos="fade-left" class="order-1 md:order-2">
        <span class="text-arkeon-gold text-sm font-bold uppercase tracking-widest mb-2 block">The Engine</span>
        <h2 class="text-4xl font-serif text-white mb-6">Built for Speed & SEO</h2>
        <p class="text-gray-300 mb-6 leading-relaxed">
          We don't use heavy page builders that slow down your site. We write clean, semantic code using <strong>Astro</strong> and <strong>React</strong>. This ensures your site loads instantly, ranks higher on Google, and converts more visitors.
        </p>
        <ul class="space-y-4">
            <li class="flex items-center gap-4">
                <div class="bg-green-500/10 p-2 rounded-full text-green-500"><Zap size={18} /></div>
                <span class="text-white">100/100 Lighthouse Performance Scores</span>
            </li>
            <li class="flex items-center gap-4">
                <div class="bg-blue-500/10 p-2 rounded-full text-blue-500"><Monitor size={18} /></div>
                <span class="text-white">Fully Responsive on all devices</span>
            </li>
        </ul>
      </div>
    </div>
  </section>

  {/* OFFERS / ENGAGEMENT MODELS */}
  <section class="py-32 relative text-center">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-arkeon-blue/10 blur-[150px] rounded-full pointer-events-none"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <h2 class="text-4xl font-serif text-white mb-16">Engagement Models</h2>
      
      <div class="grid md:grid-cols-3 gap-6">
        {packages.map((pkg, i) => (
            <a href="/pricing" class="group text-left block">
                <div class={`h-full p-8 rounded-2xl border transition-all duration-300 hover:-translate-y-2 ${
                    pkg.highlight 
                    ? 'border-arkeon-gold/30 bg-arkeon-gold/5' 
                    : 'border-white/10 bg-white/[0.02] hover:bg-white/[0.05]'
                }`}>
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-2xl font-serif text-white group-hover:text-arkeon-gold transition-colors">{pkg.name}</h3>
                        {pkg.highlight && <span class="bg-arkeon-gold text-arkeon-charcoal text-[10px] font-bold px-2 py-1 rounded">POPULAR</span>}
                    </div>
                    <p class="text-sm text-gray-400 mb-6 h-12">{pkg.desc}</p>
                    <div class="border-t border-white/5 pt-6 mt-auto">
                        <p class="text-xs text-arkeon-gold uppercase tracking-widest mb-1">Ideal For</p>
                        <p class="text-white text-sm font-medium mb-4">{pkg.idealFor}</p>
                        <div class="flex items-center justify-between">
                            <span class="text-gray-500 text-sm">Starts at <span class="text-white font-bold">{pkg.price}</span></span>
                            <span class="w-8 h-8 rounded-full bg-white/5 flex items-center justify-center group-hover:bg-arkeon-gold group-hover:text-arkeon-charcoal transition-colors">
                                <ArrowRight size={14} />
                            </span>
                        </div>
                    </div>
                </div>
            </a>
        ))}
      </div>

      <div class="mt-16">
        <a href="/pricing" class="text-white text-sm font-bold border-b border-white/20 pb-1 hover:text-arkeon-gold hover:border-arkeon-gold transition-colors">
            Compare full details & deliverables →
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
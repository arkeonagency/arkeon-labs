---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.jsx';
import { PenTool, Monitor, Code2, ArrowRight, Zap, Search, Layout, TrendingUp, Users } from 'lucide-react';
import { Image } from 'astro:assets';
// Make sure these paths match your actual project structure
import alldevice from '../assets/images/alldevice.jpg';
import strategy from '../assets/images/strategy.jpg';

const services = [
  {
    icon: PenTool,
    title: "Strategic Differentiation", // Was Brand Identity
    desc: "We don't just make it 'look nice'. We engineer the gut feeling that allows you to charge premium prices.",
    details: ["Market Positioning", "Visual Authority", "Voice Engineering", "Premium Assets", "Brand Guidelines"]
  },
  {
    icon: Monitor,
    title: "Conversion Architecture", // Was UI/UX
    desc: "Design isn't art; it's a funnel. We build frictionless interfaces that guide users inevitably to the 'Buy' button.",
    details: ["Thumb-Zone Layouts", "High-Fidelity UI", "Purchase Psychology", "Mobile-First Logic", "Motion Triggers"]
  },
  {
    icon: Code2,
    title: "Technical Velocity", // Was Web Development
    desc: "Speed is a revenue metric. We build zero-bloat engines that load in <0.8s, ensuring no lead is lost to loading screens.",
    details: ["Astro Architecture", "Zero JavaScript Core", "Global CDN", "Technical SEO", "Security Hardening"]
  }
];

const packages = [
  {
    name: "Origin",
    desc: "Instant credibility for founders who need to move fast.",
    price: "ETB 25,000", // Updated to agreed pricing
    idealFor: "Seed Stage • Consultants • Validation"
  },
  {
    name: "Evolution",
    desc: "A scalable content engine to build authority & rank.",
    price: "ETB 35,000",
    idealFor: "Growing SMEs • Medical • E-Commerce",
    highlight: true
  },
  {
    name: "Pinnacle",
    desc: "Industry dominance via immersive interactive experiences.",
    price: "ETB 56,000+",
    idealFor: "Market Leaders • Venture SaaS • Luxury"
  }
];
---

<BaseLayout>
  <Seo 
    title="Services" 
    description="We build digital assets that convert. Narrative websites, CMS engines, and interactive brand experiences." 
  />

  {/* HERO */}
  <section class="pt-32 pb-20 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-arkeon-gold/10 blur-[120px] rounded-full pointer-events-none"></div>
    <div class="container mx-auto px-6 text-center relative z-10">
      <h1 class="text-5xl md:text-7xl font-serif mb-6 text-white">
        From Website to <br /><span class="text-gradient-gold">Digital Asset</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed">
        Most agencies sell code. We sell outcomes. We build high-performance engines designed to build trust, increase leads, and elevate authority.
      </p>
    </div>
  </section>

  {/* DISCIPLINES GRID */}
  <section class="py-20 relative z-10">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8">
        {services.map((s, i) => (
          <div 
            class="p-8 border border-white/10 bg-white/[0.02] backdrop-blur-md rounded-2xl hover:bg-white/[0.05] hover:border-arkeon-gold/30 transition-all duration-500 group"
            data-aos="fade-up"
            data-aos-delay={i * 100}
          >
            <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center mb-6 text-arkeon-gold group-hover:scale-110 transition-transform">
              <s.icon size={24} />
            </div>
            <h3 class="text-2xl font-serif text-white mb-4">{s.title}</h3>
            <p class="text-gray-400 mb-8 leading-relaxed h-20 text-sm">{s.desc}</p>
            <ul class="space-y-3 border-t border-white/5 pt-6">
              {s.details.map(item => (
                <li class="flex items-center gap-2 text-sm text-gray-300">
                  <div class="w-1.5 h-1.5 bg-arkeon-gold rounded-full"></div> {item}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* DEEP DIVE: STRATEGY */}
  <section class="py-24 border-t border-white/5 relative overflow-hidden">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-16 items-center">
      <div data-aos="fade-right">
        <span class="text-arkeon-gold text-sm font-bold uppercase tracking-widest mb-2 block">The Psychology</span>
        <h2 class="text-4xl font-serif text-white mb-6">Narrative Before Pixels</h2>
        <p class="text-gray-300 mb-6 leading-relaxed">
          We don't use templates. We structure your site like a sales letter. We define the "Villain" in your customer's life and position your brand as the only logical "Hero."
        </p>
        <div class="grid grid-cols-2 gap-6 mt-8">
            <div class="bg-white/5 p-4 rounded-lg">
                <Users className="text-arkeon-gold mb-3" size={24} />
                <h4 class="text-white font-bold mb-1">Customer Profile</h4>
                <p class="text-xs text-gray-400">Defining the 'Dream Outcome'.</p>
            </div>
            <div class="bg-white/5 p-4 rounded-lg">
                <Layout className="text-arkeon-gold mb-3" size={24} />
                <h4 class="text-white font-bold mb-1">Sales Architecture</h4>
                <p class="text-xs text-gray-400">Wireframing for conversion.</p>
            </div>
        </div>
      </div>
      <div class="relative h-[400px] rounded-2xl overflow-hidden" data-aos="fade-left">
        <div class="absolute inset-0 bg-arkeon-charcoal/20 z-10"></div>
        <Image src={strategy} alt="Strategy Session" class="w-full h-full object-cover" />
      </div>
    </div>
  </section>

  {/* DEEP DIVE: TECH */}
  <section class="py-24 relative overflow-hidden bg-white/[0.02]">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-16 items-center">
       <div class="relative h-[400px] rounded-2xl overflow-hidden order-2 md:order-1" data-aos="fade-right">
        <div class="absolute inset-0 bg-arkeon-charcoal/20 z-10"></div>
        <Image src={alldevice} alt="Coding" class="w-full h-full object-cover" />
      </div>
      
      <div data-aos="fade-left" class="order-1 md:order-2">
        <span class="text-arkeon-gold text-sm font-bold uppercase tracking-widest mb-2 block">The Engine</span>
        <h2 class="text-4xl font-serif text-white mb-6">Velocity as a Feature</h2>
        <p class="text-gray-300 mb-6 leading-relaxed">
          Speed isn't a luxury; it's a requirement. Every second of load time drops conversion by 4.42%. We build with <strong>Astro</strong> to ensure instant page loads, higher Google rankings, and seamless user retention.
        </p>
        <ul class="space-y-4">
            <li class="flex items-center gap-4">
                <div class="bg-green-500/10 p-2 rounded-full text-green-500"><Zap size={18} /></div>
                <span class="text-white">100/100 Lighthouse Performance Scores</span>
            </li>
            <li class="flex items-center gap-4">
                <div class="bg-blue-500/10 p-2 rounded-full text-blue-500"><TrendingUp size={18} /></div>
                <span class="text-white">Technical SEO & Analytics Included</span>
            </li>
        </ul>
      </div>
    </div>
  </section>

  {/* OFFERS / ENGAGEMENT MODELS */}
  <section class="py-32 relative text-center">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-arkeon-blue/10 blur-[150px] rounded-full pointer-events-none"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <h2 class="text-4xl font-serif text-white mb-16">Engagement Models</h2>
      
      <div class="grid md:grid-cols-3 gap-6">
        {packages.map((pkg, i) => (
            <a href="/pricing" class="group text-left block">
                <div class={`h-full p-8 rounded-2xl border transition-all duration-300 hover:-translate-y-2 ${
                    pkg.highlight 
                    ? 'border-arkeon-gold/30 bg-arkeon-gold/5' 
                    : 'border-white/10 bg-white/[0.02] hover:bg-white/[0.05]'
                }`}>
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-2xl font-serif text-white group-hover:text-arkeon-gold transition-colors">{pkg.name}</h3>
                        {pkg.highlight && <span class="bg-arkeon-gold text-arkeon-charcoal text-[10px] font-bold px-2 py-1 rounded">POPULAR</span>}
                    </div>
                    <p class="text-sm text-gray-400 mb-6 h-12 leading-relaxed">{pkg.desc}</p>
                    <div class="border-t border-white/5 pt-6 mt-auto">
                        <p class="text-xs text-arkeon-gold uppercase tracking-widest mb-1">Ideal For</p>
                        <p class="text-white text-sm font-medium mb-4">{pkg.idealFor}</p>
                        <div class="flex items-center justify-between">
                            <span class="text-gray-500 text-sm">Investment: <span class="text-white font-bold">{pkg.price}</span></span>
                            <span class="w-8 h-8 rounded-full bg-white/5 flex items-center justify-center group-hover:bg-arkeon-gold group-hover:text-arkeon-charcoal transition-colors">
                                <ArrowRight size={14} />
                            </span>
                        </div>
                    </div>
                </div>
            </a>
        ))}
      </div>

      <div class="mt-16">
        <a href="/pricing" class="text-white text-sm font-bold border-b border-white/20 pb-1 hover:text-arkeon-gold hover:border-arkeon-gold transition-colors">
            See the Bonuses & Guarantees →
        </a>
      </div>
    </div>
  </section>

  {/* NEW: Growth Retainer Section */}
  <section class="py-20 bg-arkeon-gold/5 border-t border-arkeon-gold/20">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
      <div>
        <span class="text-arkeon-gold font-bold tracking-widest text-sm uppercase">Post-Launch Support</span>
        <h2 class="text-4xl font-serif mt-2 mb-6">The Growth Retainer</h2>
        <p class="text-gray-400 mb-6">
          Websites are living assets. Don't let yours stagnate. Our monthly retainer ensures your site stays secure, fast, and constantly evolving.
        </p>
        <ul class="space-y-4 mb-8">
          <li class="flex items-center gap-3 text-sm text-white">
            <span class="text-arkeon-gold">✓</span> Monthly Analytics Report (Traffic & Behavior)
          </li>
          <li class="flex items-center gap-3 text-sm text-white">
            <span class="text-arkeon-gold">✓</span> 1 Hour of Content Updates / Design Tweaks
          </li>
          <li class="flex items-center gap-3 text-sm text-white">
            <span class="text-arkeon-gold">✓</span> Uptime Monitoring & Security Patches
          </li>
        </ul>
        <div class="text-2xl font-bold text-white mb-1">ETB 5,000 <span class="text-sm font-normal text-gray-500">/ month</span></div>
      </div>
      <div class="bg-arkeon-charcoal p-8 rounded-xl border border-white/10 relative overflow-hidden">
        <div class="absolute -right-10 -top-10 w-40 h-40 bg-arkeon-gold/20 rounded-full blur-3xl"></div>
        <h3 class="font-serif text-xl mb-4">Peace of Mind Includes:</h3>
        <p class="text-sm text-gray-400 leading-relaxed">
          We act as your internal tech team. You send a WhatsApp message with a change, and it gets done. No separate invoices, no delays.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>